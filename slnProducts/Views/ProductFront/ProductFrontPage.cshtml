@using PagedList;
@using PagedList.Mvc;

@model IPagedList<slnProducts.Models.Entity.tProduct>


@{
    ViewBag.Title = "ProductFrontPage";
}
@Html.Partial("ProductMenu", (slnProducts.ViewModel.ProductMenu)ViewBag.productMenu)
<link href="~/Content/PagedList.css" rel="stylesheet" />

<h2>商品列表</h2>
<div class="row">
    @foreach (var item in Model)
    {
        var imageScr = $"../../images/{item.fProductID}.jpg";

        <div class="col-lg-4">
            <div class="thumbnail">
                <img src="@imageScr" style="width:30%" />
                <div class="caption"></div>
                <p>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().fProductChName)

                    <a href="../../ProductFront/ProductSinglePage?productId=@item.fProductID">
                        @item.fProductChName
                    </a>

                </p>
                <p>@Html.DisplayNameFor(m => m.FirstOrDefault().fUnitPrice) @item.fUnitPrice</p>

                @Html.ActionLink("加入購物車", "", new {prodID=item.fProductID},
              new {@class = "btn btn-info" })

            </div>
        </div>
    }
</div>
@Html.PagedListPager(Model, page => Url.Action("ProductFrontPage", new { page }))


